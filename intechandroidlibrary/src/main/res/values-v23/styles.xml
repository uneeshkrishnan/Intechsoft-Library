<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KRCSTheme" parent="AppTheme">
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:textViewStyle">@style/App_TextViewStyle</item>
        <item name="spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
</resources>